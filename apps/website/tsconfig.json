{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "types": ["node", "@capacitor/core", "vue"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": ["./**/*.ts", "./**/*.vue"],
  "exclude": ["node_modules", "nuxt.config.ts"]
}
